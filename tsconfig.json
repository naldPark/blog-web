{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "typeRoots": ["src/types", "node_modules/@types"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "vite-plugin-vue-layouts/client", "unplugin-vue-router/client"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./typed-router.d.ts", "./vite.config.*", "./env.d.ts", "./shims.d.ts", "./src/**/*", "./src/**/*.vue", "./auto-imports.d.ts", "./components.d.ts"],
  "exclude": ["dist", "node_modules"]
}
